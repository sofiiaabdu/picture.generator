  <%= render '/shared/side' %>
  <br>

<div class="container">
  <div class="row">
  <% @users.each do |user| %>
<div class="col-sm-3 col-lg-3">
  <div class="card border-primary text-center">
    <div class="card-body">
      <h5 class="card-title"><%= user.first_name + " " + user.last_name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= user.age.to_s + " years old." %></h6>
      <p class="card-text"><%= user.address.city %></p>
      <p class="card-text"><%= user.about %></p>
      <a href="#" class="card-link"><%= link_to 'Show', user, class: 'btn btn-primary' %></a>
      <a href="#" class="card-link"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %></a>
      <a href="#" class="card-link"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></a>
    </div>
  </div>
  <br>
</div>
  <% end %>
  </div>
</div>


