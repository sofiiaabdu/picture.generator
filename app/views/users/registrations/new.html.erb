<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="form-row">
    <div class="form-group col-md-5">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
    </div>
    <div class="form-group col-md-5">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
    </div>
    <br>
    <div class="form-group col-md-12 ">
      <%= form.label :sex %>
      <%= form.select :sex, User.sexes.keys.map {|key| [t("sex.#{key}"), key]}, class: 'mdb-select colorful-select dropdown-primary '%>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :age %>
      <%= form.text_field :age, class: 'form-control', placeholder: 'Age' %>
    </div>

    <div class="form-group col-md-10">
      <%= form.label :about %>
      <%= form.text_area :about, class: 'form-control', placeholder: 'About...' %>
    </div>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :address %>
    <%= form.fields_for :address do |address| %>

      <%= form.label :zip %>
      <%= address.text_field :zip, class: 'form-control', placeholder: 'Zip' %>
      <br>
      <%= form.label :city %>
      <%= address.text_field :city, class: 'form-control', placeholder: 'City' %>
      <br>
      <%= form.label :street %>
      <%= address.text_field :street, class: 'form-control', placeholder: 'Street' %>
      <br>
      <%= form.label :house_member %>
      <%= address.text_field :house_member, class: 'form-control', placeholder: 'Building' %>
    <% end %>
  </div>

  <div class="actions btn btn-link">
    <%= form.submit "Sign up " %>
  </div>
<% end %>

