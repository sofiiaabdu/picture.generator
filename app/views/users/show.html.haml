%p#notice= notice
%p
  %strong Name:
  = @user.name
%br/
%h3 Random picture:
= image_tag @url, height: '250', width: '350'
%br/
%h3 All pictures:
%table
  %tbody
    - @pictures.each do |img|
      %tr
        %td= image_tag img.url, height: '250', width: '350'
        %td= link_to 'Destroy', picture_path(img), method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'Edit', edit_user_path(@user)
|
= link_to 'Back', users_path
